<h1>Your Cart</h1>

<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li>
        <strong><%= product.name %></strong><br>
        Price: ₹ <%= product.price %><br>
        Quantity: <%= @cart[product.id.to_s] %>

        <%= button_to "Remove",
            remove_cart_path(product),
            method: :delete %>
      </li>
      <hr>
    <% end %>
  </ul>

  <!-- ✅ Checkout button goes HERE -->
  <%= link_to "Proceed to Checkout",
      new_order_path,
      class: "btn" %>

<% else %>
  <p>Your cart is empty.</p>
<% end %>

<%= link_to "Back to Shop", root_path %>
