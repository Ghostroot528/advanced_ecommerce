<h1>My Orders</h1>

<% if @orders.any? %>
  <table border="1" cellpadding="10">
    <tr>
      <th>Order ID</th>
      <th>Total</th>
      <th>Payment</th>
      <th>Status</th>
      <th>View</th>
    </tr>

    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td>â‚¹ <%= order.total %></td>
        <td><%= order.payment_status %></td>
        <td><%= order.status %></td>
        <td><%= link_to "View", order_path(order) %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>No orders yet.</p>
<% end %>
