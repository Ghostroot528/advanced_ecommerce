<h1>Admin Dashboard</h1>

<p>
Total Orders: <%= @total_orders %><br>
Total Revenue: ₹ <%= @total_revenue %>
</p>

<hr>

<table border="1" cellpadding="10">
  <tr>
    <th>ID</th>
    <th>User</th>
    <th>Total</th>
    <th>Payment</th>
    <th>Status</th>
    <th>View</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td>#<%= order.id %></td>
      <td><%= order.user.email %></td>
      <td>₹ <%= order.total %></td>
      <td><%= order.payment_status %></td>
      <td><%= order.status %></td>
      <td><%= link_to "View", admin_order_path(order) %></td>
    </tr>
  <% end %>
</table>